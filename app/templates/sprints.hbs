<div class="container">
    <div class="col-md-3" id="home-box">
        <div class="sprint_header">
            <h2>Sprints</h2>
            <div class="space"></div>
        </div>
        <ul class="list-group">
            <li class="list-group-item">
                <span class="glyphicon glyphicon-ok "></span> Task 1</li>
            <li class="list-group-item">
                <span class="glyphicon glyphicon-ok "></span> Task 2</li>
            <li class="list-group-item">
                <span class="glyphicon glyphicon-ok "></span> Task 3</li>
            <li class="list-group-item">
                <span class="glyphicon glyphicon-ok "></span> Task 4</li>
            <li class="list-group-item">
                <span class="glyphicon glyphicon-ok "></span> Task 5</li>
            <li class="list-group-item">
                <span class="glyphicon glyphicon-ok "></span> Task 6</li>
        </ul>
    </div>
</div>

<div class="col-md-10 col-md-offset-1">

    <div class="panel panel-default panel-table">
        <div class="panel-heading">
            <div class="row">
                <div class="col col-xs-6">
                    <h3 class="panel-title">Backlog</h3>
                </div>
                <div class="col col-xs-6 text-right">
                    <button type="button" class="btn btn-sm btn-primary btn-create">Create New</button>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered table-list">
                <thead>
                    <tr>
                        <th class="hidden-xs">ID</th>
                        <th>Name</th>
                        <th>Task</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each model as |backlog|}}
                    <tr>
                        <td class="hidden-xs">{{backlog.id}}</td>
                        <td>{{backlog.name}}</td>
                        <td>{{backlog.task}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>